package rules.rules_2


import com.ftn.sbnz.model.examples_1.Order;
import com.ftn.sbnz.model.examples_1.Discount

global Integer comboCount;

rule "Combo discount"
    when
        $o: Order( orderLines.size >= comboCount, discount == null )
    then
        $o.setDiscount(new Discount(10.0));
        System.out.println("Discount set...");
        update($o);
end
