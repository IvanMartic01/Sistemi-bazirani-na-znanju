<kmodule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://jboss.org/kie/6.0.0/kmodule">

    <kbase name="rules-1" packages="rules.rules_1">
        <ksession name="k-session-1"/>
    </kbase>

    <kbase name="rules-2" packages="rules.rules_2">
        <ksession name="k-session-2"/>
    </kbase>

    <kbase name="rules-3" packages="rules.rules_3">
        <ksession name="k-session-3"/>
    </kbase>

    <kbase name="rules-4" packages="rules.rules_4">
        <ksession name="k-session-4"/>
    </kbase>

    <kbase name="rules-5" packages="rules.accumRules">
        <ksession name="k-session-5"/>
    </kbase>

    <kbase name="item_classification" packages="item_classification">
        <ksession name="k-session-item-classification"/>
    </kbase>

    <!-- CEP -->
    <!-- eventProcessingMode=stream to znaci da ce svaki event od sada imati redosled -->
    <kbase name="cepKbase" eventProcessingMode="stream" packages="cep_1">
        <ksession name="cepKsession"/>
    </kbase>

    <kbase name="cepConfigKbase" eventProcessingMode="stream" packages="cep_2">
        <ksession name="cepConfigKsessionPseudoClock" clockType="pseudo"/>
        <ksession name="cepConfigKsessionRealtimeClock" clockType="realtime"/>
    </kbase>
    <!--  BACKWARD CHAINING  -->
    <kbase name="backward-chaining" packages="backward_chaining">
        <ksession name="k-session-backward-chaining"/>
    </kbase>

</kmodule>